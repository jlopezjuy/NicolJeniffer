		<property name="tipoProductoDao" ref="tipoProductoDao" />
		<property name="tipoTransaccionDao" ref="tipoTransaccionDao" />
		<property name="transaccionDao" ref="transaccionDao" />
		<property name="unidadDao" ref="unidadDao" />
		<property name="usuarioDao" ref="usuarioDao" />

	</bean>

	<bean id="servicioItem" class="e.servicio.impl.ServicioItemImpl">
