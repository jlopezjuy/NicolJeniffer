<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="e.dominio.Usuario" table="USUARIOS">
		<id name="id" access="field" type="java.lang.Long">
			<column name="ID_USUARIO" />
			<generator class="native"/>			
		</id>		
		<property name="usuario" access="field" type="java.lang.String">
			<column name="USUARIO" />
		</property>		
		<property name="clave" access="field" type="java.lang.String">
			<column name="CLAVE" />
		</property>		
	</class>
</hibernate-mapping>